<%=
   if (!@allowed)
     if (@current_user['fb_number'] != 0)
       render :partial => 'restricted_in'
     else
       render :partial => 'restricted_out'
     end
   else
     prefix = 'challenges/active/'
     case @challenge['challenge_type']
     when "custom"
       render :partial => prefix+'custom'
     when "player"
       if (@challenge['challenge_subtype'] == 'pvp')
         render :partial => prefix+'player_pvp'
       else
         render :partial => prefix+'player_any'
       end
     when "game"
       render :partial => prefix+'game'
     when "team"
       render :partial => prefix+'team'
     else
       redirect_to :controller => 'welcome', :action => "index"
     end
   end
%>

<%= 
  if (@allowed) 
    render :partial => @challenge['public'] == true ? 'footer_public' : 'footer_private' 
  end 
%>


<script>
$(document).ready(function() {
  $('#fb_comments').jScrollPane();
  $('#view_comments').mousedown(function() {
    $('#fb_comments').show();
    $('#fb_challengers').hide();
    $('#view_challengers').removeClass('active');
    $(this).addClass('active');
  })

  $('#view_challengers').mousedown(function() {
    $('#fb_comments').hide();
    $('#fb_challengers').show();
    $('#view_comments').removeClass('active');
    $(this).addClass('active');
  })

  $('#invite').mousedown(function() {
    inviteFriends();
  })

  $('h2#header').empty().append('Loading User...');
  fbConnect();
  $('#view_comments').mousedown();
});
var CHALLENGE = <%=raw @challenge.to_json%>;
</script>